@page "/surveys"
@using TaskSurvey.Infrastructure.DTOs.SurveyDTOs
@layout MainLayout
@rendermode InteractiveServer
@inject ISurveyService SurveyService
@inject NavigationManager NavigationManager

<div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="fw-bold text-dark mb-1">Survey Management</h3>
                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Manage and track survey submissions</p>
                </div>
                <button class="btn text-white shadow-sm px-4" @onclick='() => NavigationManager.NavigateTo("/surveys/form")'
                        style="background: #0ea5e9; border: none;">
                    <i class="bi bi-plus-circle me-2"></i>Create Survey
                </button>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card border-0 shadow-sm rounded-3 mb-3">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label fw-semibold text-dark mb-1" style="font-size: 0.85rem;">
                        <i class="bi bi-search me-1" style="color: #0ea5e9;"></i>Search Survey
                    </label>
                    <input type="text" class="form-control" placeholder="Search by document number or requester..." 
                           @bind="searchQuery" @bind:event="oninput" @onkeyup="ApplyFilters" 
                           style="font-size: 0.95rem;" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-dark mb-1" style="font-size: 0.85rem;">
                        <i class="bi bi-funnel me-1" style="color: #0ea5e9;"></i>Status
                    </label>
                    <select class="form-select" @onchange="OnStatusFilterChanged" style="font-size: 0.95rem;">
                        <option value="">All Status</option>
                        <option value="Draft">Draft</option>
                        <option value="ConfirmToApprove">Confirm To Approve</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-white p-2 rounded me-3" style="background: #0ea5e9;">
                            <i class="bi bi-file-earmark-text-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Total Surveys</p>
                            <h4 class="fw-bold mb-0">@surveys.Count</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-white p-2 rounded me-3" style="background: #f59e0b;">
                            <i class="bi bi-clock-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Draft</p>
                            <h4 class="fw-bold mb-0">@surveys.Count(s => s.Status == "Draft")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-white p-2 rounded me-3" style="background: #10b981;">
                            <i class="bi bi-check-circle-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Confirm</p>
                            <h4 class="fw-bold mb-0">@surveys.Count(s => s.Status == "Confirmed")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-white p-2 rounded me-3" style="background: #ef4444;">
                            <i class="bi bi-x-circle-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Rejected</p>
                            <h4 class="fw-bold mb-0">@surveys.Count(s => s.Status == "Rejected")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Surveys Table -->
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-white py-3 px-3 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-semibold text-dark">
                    <i class="bi bi-table me-2" style="color: #0ea5e9;"></i>Survey List
                </h6>
                <span class="badge rounded-pill" style="background: #0ea5e9; font-size: 0.85rem;">
                    @filteredSurveys.Count Results
                </span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="font-size: 0.9rem;">
                    <thead style="background: #f8f9fa;">
                        <tr>
                            <th class="py-3 px-3 fw-semibold text-dark">Document No.</th>
                            <th class="py-3 px-3 fw-semibold text-dark">Template</th>
                            <th class="py-3 px-3 fw-semibold text-dark">Requester</th>
                            <th class="py-3 px-3 fw-semibold text-dark">Date</th>
                            <th class="py-3 px-3 fw-semibold text-dark">Status</th>
                            <th class="py-3 px-3 fw-semibold text-dark text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (filteredSurveys.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    <p class="mb-0">No surveys found</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var survey in filteredSurveys)
                            {
                                <tr>
                                    <td class="px-3 py-3">
                                        <span class="fw-semibold" style="color: #0ea5e9;">@survey.DocumentId</span>
                                    </td>
                                    <td class="px-3 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-2 me-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-file-earmark-text-fill" style="color: #0ea5e9;"></i>
                                            </div>
                                            <span>@(survey.Header != null ? survey.Header.TemplateName : "N/A")</span>
                                        </div>
                                    </td>
                                    <td class="px-3 py-3">@(survey.Requester != null ? survey.Requester.Username : "N/A")</td>
                                    <td class="px-3 py-3">@survey.CreatedAt.ToString("dd MMM yyyy")</td>
                                    <td class="px-3 py-3">
                                        <span class="badge rounded-pill @GetStatusBadgeClass(survey.Status)">
                                            @GetStatusDisplay(survey.Status)
                                        </span>
                                    </td>
                                    <td class="px-3 py-3 text-center">
                                        <button class="btn btn-sm text-white px-3" @onclick="() => EditSurvey(survey.DocumentId)"
                                                style="background: #0ea5e9; border: none;">
                                            <i class="bi bi-pencil-square me-1"></i>Edit
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<SurveyHeaderResponseDTO> surveys = new();
    private List<SurveyHeaderResponseDTO> filteredSurveys = new();
    
    private string searchQuery = "";
    private string selectedStatus = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        surveys = await SurveyService.GetSurveyHeaders();
        ApplyFilters();
    }

    private void OnStatusFilterChanged(ChangeEventArgs e)
    {
        selectedStatus = e.Value?.ToString() ?? "";
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        var result = surveys.AsQueryable();

        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var q = searchQuery.ToLower();
            result = result.Where(s => 
                s.DocumentId.ToLower().Contains(q) || 
                (s.Requester != null && s.Requester.Username.ToLower().Contains(q)));
        }

        if (!string.IsNullOrWhiteSpace(selectedStatus))
        {
            result = result.Where(s => s.Status == selectedStatus);
        }

        filteredSurveys = result.OrderByDescending(s => s.CreatedAt).ToList();
    }

    private void EditSurvey(string id) => NavigationManager.NavigateTo($"/surveys/form?surveyId={id}");

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Draft" => "bg-warning",
        "ConfirmToApprove" => "bg-info",
        "Confirmed" => "bg-success",
        "Rejected" => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetStatusDisplay(string status) => status switch
    {
        "ConfirmToApprove" => "Pending Approval",
        _ => status
    };
}