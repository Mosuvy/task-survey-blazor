@page "/surveys"
@namespace TaskSurvey.Components.Pages.IndexSurvey
@layout MainLayout
@rendermode InteractiveServer

<div class="container-fluid px-4 py-4 bg-main" style="min-height: 100vh;">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <div class="d-flex align-items-center gap-3 mb-2">
                        <div class="bg-primary text-white p-3 rounded-3 shadow-sm">
                            <i class="bi bi-clipboard-data-fill fs-4"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold text-title mb-1">Survey Management</h3>
                            <p class="text-muted mb-0" style="font-size: 0.9rem;">
                                @(canApprove ? "Review and approve survey submissions" : "Manage and track survey submissions")
                            </p>
                        </div>
                    </div>
                </div>
                @if (!isSupervisor) 
                {
                    <button class="btn btn-primary shadow-sm px-4 py-2" @onclick='() => NavigationManager.NavigateTo("/surveys/form")'>
                        <i class="bi bi-plus-circle me-2"></i>Create Survey
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
        <div class="card-header bg-card border-bottom border-custom py-3 px-4"
             style="cursor: pointer;"
             data-bs-toggle="collapse"
             data-bs-target="#filterCollapse"
             aria-expanded="true"
             aria-controls="filterCollapse">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-semibold text-title">
                    <i class="bi bi-funnel-fill me-2 text-primary"></i>Filters
                </h6>
                <i class="bi bi-chevron-down text-primary transition-icon"></i>
            </div>
        </div>
        <div class="collapse show" id="filterCollapse">
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label fw-semibold text-title mb-2">
                            <i class="bi bi-search me-1 text-primary"></i>Search Survey
                        </label>
                        <input type="text" class="form-control border-custom" placeholder="Search by document number or requester..." 
                               @bind="searchQuery" @bind:event="oninput" @onkeyup="ApplyFilters" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-3">
        @if (canApprove)
        {
            @if (isOverseer)
            {
                <!-- Stats for Overseer -->
                <div class="col-md-3">
                    <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 p-3 me-3" style="background: rgba(156, 163, 175, 0.1);">
                                    <i class="bi bi-file-earmark-fill fs-3 text-secondary"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1" style="font-size: 0.85rem;">My Drafts</p>
                                    <h4 class="fw-bold mb-0 text-title">@draftSurveys.Count</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 p-3 me-3" style="background: rgba(245, 158, 11, 0.1);">
                                    <i class="bi bi-clock-fill fs-3" style="color: #f59e0b;"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1" style="font-size: 0.85rem;">Pending Review</p>
                                    <h4 class="fw-bold mb-0 text-title">@requestedSurveys.Count</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 p-3 me-3" style="background: rgba(34, 197, 94, 0.1);">
                                    <i class="bi bi-check-circle-fill fs-3" style="color: var(--accent-success);"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1" style="font-size: 0.85rem;">Confirmed</p>
                                    <h4 class="fw-bold mb-0 text-title">@confirmedSurveys.Count</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 p-3 me-3" style="background: rgba(239, 68, 68, 0.1);">
                                    <i class="bi bi-x-circle-fill fs-3" style="color: var(--accent-danger);"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1" style="font-size: 0.85rem;">Rejected</p>
                                    <h4 class="fw-bold mb-0 text-title">@rejectedSurveys.Count</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Stats for Supervisor -->
                <div class="col-md-4">
                    <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 p-3 me-3" style="background: rgba(245, 158, 11, 0.1);">
                                    <i class="bi bi-clock-fill fs-3" style="color: #f59e0b;"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1" style="font-size: 0.85rem;">Pending Review</p>
                                    <h4 class="fw-bold mb-0 text-title">@requestedSurveys.Count</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 p-3 me-3" style="background: rgba(34, 197, 94, 0.1);">
                                    <i class="bi bi-check-circle-fill fs-3" style="color: var(--accent-success);"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1" style="font-size: 0.85rem;">Confirmed</p>
                                    <h4 class="fw-bold mb-0 text-title">@confirmedSurveys.Count</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 p-3 me-3" style="background: rgba(239, 68, 68, 0.1);">
                                    <i class="bi bi-x-circle-fill fs-3" style="color: var(--accent-danger);"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1" style="font-size: 0.85rem;">Rejected</p>
                                    <h4 class="fw-bold mb-0 text-title">@rejectedSurveys.Count</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-3">
                <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-3 p-3 me-3" style="background: rgba(79, 70, 229, 0.1);">
                                <i class="bi bi-file-earmark-text-fill fs-3 text-primary"></i>
                            </div>
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.85rem;">Total Surveys</p>
                                <h4 class="fw-bold mb-0 text-title">@surveys.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-3 p-3 me-3" style="background: rgba(156, 163, 175, 0.1);">
                                <i class="bi bi-file-earmark-fill fs-3 text-secondary"></i>
                            </div>
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.85rem;">My Drafts</p>
                                <h4 class="fw-bold mb-0 text-title">@draftSurveys.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-3 p-3 me-3" style="background: rgba(34, 197, 94, 0.1);">
                                <i class="bi bi-check-circle-fill fs-3" style="color: var(--accent-success);"></i>
                            </div>
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.85rem;">Confirmed</p>
                                <h4 class="fw-bold mb-0 text-title">@confirmedSurveys.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-3 p-3 me-3" style="background: rgba(239, 68, 68, 0.1);">
                                <i class="bi bi-x-circle-fill fs-3" style="color: var(--accent-danger);"></i>
                            </div>
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.85rem;">Rejected</p>
                                <h4 class="fw-bold mb-0 text-title">@rejectedSurveys.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (canApprove)
    {
        @if (isOverseer)
        {
            <!-- Draft Surveys Table (For Overseer) -->
            <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
                <div class="card-header bg-card border-bottom border-custom py-3 px-4"
                     style="cursor: pointer;"
                     data-bs-toggle="collapse"
                     data-bs-target="#draftCollapse"
                     aria-expanded="true"
                     aria-controls="draftCollapse">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 fw-semibold text-title">
                            <i class="bi bi-file-earmark-fill me-2 text-secondary"></i>My Draft Surveys
                        </h6>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-secondary">@draftSurveys.Count</span>
                            <i class="bi bi-chevron-down text-primary transition-icon"></i>
                        </div>
                    </div>
                </div>
                <div class="collapse show" id="draftCollapse">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-main">
                                    <tr>
                                        <th class="py-3 px-3 fw-semibold text-title">Document No.</th>
                                        <th class="py-3 px-3 fw-semibold text-title">Template</th>
                                        <th class="py-3 px-3 fw-semibold text-title">Date</th>
                                        <th class="py-3 px-3 fw-semibold text-title">Status</th>
                                        <th class="py-3 px-3 fw-semibold text-title text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (draftSurveys.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center py-5 text-muted">
                                                <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                                <p class="mb-2 fw-semibold text-body">No draft surveys</p>
                                                <p class="mb-0 small">Start by creating your first survey</p>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var survey in draftSurveys)
                                        {
                                            <tr>
                                                <td class="px-3 py-3">
                                                    <span class="fw-semibold text-primary">@survey.DocumentId</span>
                                                </td>
                                                <td class="px-3 py-3">
                                                    <div class="d-flex align-items-center">
                                                        <div class="rounded-circle p-2 me-2" 
                                                             style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: rgba(79, 70, 229, 0.1);">
                                                            <i class="bi bi-file-earmark-text-fill text-primary"></i>
                                                        </div>
                                                        <span class="text-body">@(survey.Header != null ? survey.Header.TemplateName : "N/A")</span>
                                                    </div>
                                                </td>
                                                <td class="px-3 py-3 text-body">
                                                    <div class="d-flex align-items-center gap-2">
                                                        <i class="bi bi-calendar3 text-primary"></i>
                                                        <span>@survey.CreatedAt.ToString("dd MMM yyyy")</span>
                                                    </div>
                                                </td>
                                                <td class="px-3 py-3">
                                                    <span class="badge rounded-pill @GetStatusBadgeClass(survey.Status)">
                                                        @GetStatusDisplay(survey.Status)
                                                    </span>
                                                </td>
                                                <td class="px-3 py-3 text-center">
                                                    <button class="btn btn-sm btn-primary px-3" @onclick="() => ViewSurvey(survey.DocumentId)">
                                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Pending Approval Table (For Supervisors/Overseers) -->
        <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
            <div class="card-header bg-card border-bottom border-custom py-3 px-4"
                 style="cursor: pointer;"
                 data-bs-toggle="collapse"
                 data-bs-target="#requestedCollapse"
                 aria-expanded="true"
                 aria-controls="requestedCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-semibold text-title">
                        <i class="bi bi-clock-history me-2 text-warning"></i>@(isOverseer ? "Subordinates Pending Approval" : "Pending Approval")
                    </h6>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-warning text-dark">@requestedSurveys.Count</span>
                        <i class="bi bi-chevron-down text-primary transition-icon"></i>
                    </div>
                </div>
            </div>
            <div class="collapse show" id="requestedCollapse">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-main">
                                <tr>
                                    <th class="py-3 px-3 fw-semibold text-title">Document No.</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Template</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Requester</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Date</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Status</th>
                                    <th class="py-3 px-3 fw-semibold text-title text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (requestedSurveys.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5 text-muted">
                                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                            <p class="mb-2 fw-semibold text-body">No surveys pending approval</p>
                                            <p class="mb-0 small">All surveys have been reviewed</p>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var survey in requestedSurveys)
                                    {
                                        <tr>
                                            <td class="px-3 py-3">
                                                <span class="fw-semibold text-primary">@survey.DocumentId</span>
                                            </td>
                                            <td class="px-3 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle p-2 me-2" 
                                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: rgba(79, 70, 229, 0.1);">
                                                        <i class="bi bi-file-earmark-text-fill text-primary"></i>
                                                    </div>
                                                    <span class="text-body">@(survey.Header != null ? survey.Header.TemplateName : "N/A")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3 text-body">@(survey.Requester != null ? survey.Requester.Username : "N/A")</td>
                                            <td class="px-3 py-3 text-body">
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="bi bi-calendar3 text-primary"></i>
                                                    <span>@survey.CreatedAt.ToString("dd MMM yyyy")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3">
                                                <span class="badge rounded-pill @GetStatusBadgeClass(survey.Status)">
                                                    @GetStatusDisplay(survey.Status)
                                                </span>
                                            </td>
                                            <td class="px-3 py-3 text-center">
                                                <button class="btn btn-sm btn-primary px-3" @onclick="() => ViewSurvey(survey.DocumentId)">
                                                    <i class="bi bi-eye me-1"></i>Review
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmed/Rejected Table (For Supervisors/Overseers) -->
        <div class="card border-custom shadow-sm rounded-3 bg-card">
            <div class="card-header bg-card border-bottom border-custom py-3 px-4"
                 style="cursor: pointer;"
                 data-bs-toggle="collapse"
                 data-bs-target="#processedCollapse"
                 aria-expanded="false"
                 aria-controls="processedCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-semibold text-title">
                        <i class="bi bi-check2-all me-2 text-success"></i>Processed Surveys
                    </h6>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-primary">@processedSurveys.Count</span>
                        <i class="bi bi-chevron-down text-primary transition-icon"></i>
                    </div>
                </div>
            </div>
            <div class="collapse" id="processedCollapse">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-main">
                                <tr>
                                    <th class="py-3 px-3 fw-semibold text-title">Document No.</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Template</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Requester</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Date</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Status</th>
                                    <th class="py-3 px-3 fw-semibold text-title text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (processedSurveys.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5 text-muted">
                                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                            <p class="mb-2 fw-semibold text-body">No processed surveys</p>
                                            <p class="mb-0 small">Confirmed and rejected surveys will appear here</p>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var survey in processedSurveys)
                                    {
                                        <tr>
                                            <td class="px-3 py-3">
                                                <span class="fw-semibold text-primary">@survey.DocumentId</span>
                                            </td>
                                            <td class="px-3 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle p-2 me-2" 
                                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: rgba(79, 70, 229, 0.1);">
                                                        <i class="bi bi-file-earmark-text-fill text-primary"></i>
                                                    </div>
                                                    <span class="text-body">@(survey.Header != null ? survey.Header.TemplateName : "N/A")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3 text-body">@(survey.Requester != null ? survey.Requester.Username : "N/A")</td>
                                            <td class="px-3 py-3 text-body">
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="bi bi-calendar3 text-primary"></i>
                                                    <span>@survey.CreatedAt.ToString("dd MMM yyyy")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3">
                                                <span class="badge rounded-pill @GetStatusBadgeClass(survey.Status)">
                                                    @GetStatusDisplay(survey.Status)
                                                </span>
                                            </td>
                                            <td class="px-3 py-3 text-center">
                                                <button class="btn btn-sm btn-primary px-3" @onclick="() => ViewSurvey(survey.DocumentId)">
                                                    <i class="bi bi-eye me-1"></i>View
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Draft Surveys Table (For Regular Users) -->
        <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
            <div class="card-header bg-card border-bottom border-custom py-3 px-4"
                 style="cursor: pointer;"
                 data-bs-toggle="collapse"
                 data-bs-target="#draftCollapse"
                 aria-expanded="true"
                 aria-controls="draftCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-semibold text-title">
                        <i class="bi bi-file-earmark-fill me-2 text-secondary"></i>Draft Surveys
                    </h6>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-secondary">@draftSurveys.Count</span>
                        <i class="bi bi-chevron-down text-primary transition-icon"></i>
                    </div>
                </div>
            </div>
            <div class="collapse show" id="draftCollapse">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-main">
                                <tr>
                                    <th class="py-3 px-3 fw-semibold text-title">Document No.</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Template</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Date</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Status</th>
                                    <th class="py-3 px-3 fw-semibold text-title text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (draftSurveys.Count == 0)
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                            <p class="mb-2 fw-semibold text-body">No draft surveys</p>
                                            <p class="mb-0 small">Start by creating your first survey</p>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var survey in draftSurveys)
                                    {
                                        <tr>
                                            <td class="px-3 py-3">
                                                <span class="fw-semibold text-primary">@survey.DocumentId</span>
                                            </td>
                                            <td class="px-3 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle p-2 me-2" 
                                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: rgba(79, 70, 229, 0.1);">
                                                        <i class="bi bi-file-earmark-text-fill text-primary"></i>
                                                    </div>
                                                    <span class="text-body">@(survey.Header != null ? survey.Header.TemplateName : "N/A")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3 text-body">
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="bi bi-calendar3 text-primary"></i>
                                                    <span>@survey.CreatedAt.ToString("dd MMM yyyy")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3">
                                                <span class="badge rounded-pill @GetStatusBadgeClass(survey.Status)">
                                                    @GetStatusDisplay(survey.Status)
                                                </span>
                                            </td>
                                            <td class="px-3 py-3 text-center">
                                                <button class="btn btn-sm btn-primary px-3" @onclick="() => ViewSurvey(survey.DocumentId)">
                                                    <i class="bi bi-pencil-square me-1"></i>Edit
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmed/Rejected Table (For Regular Users) -->
        <div class="card border-custom shadow-sm rounded-3 bg-card">
            <div class="card-header bg-card border-bottom border-custom py-3 px-4"
                 style="cursor: pointer;"
                 data-bs-toggle="collapse"
                 data-bs-target="#processedCollapse"
                 aria-expanded="false"
                 aria-controls="processedCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-semibold text-title">
                        <i class="bi bi-check2-all me-2 text-success"></i>Processed Surveys
                    </h6>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-primary">@processedSurveys.Count</span>
                        <i class="bi bi-chevron-down text-primary transition-icon"></i>
                    </div>
                </div>
            </div>
            <div class="collapse" id="processedCollapse">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-main">
                                <tr>
                                    <th class="py-3 px-3 fw-semibold text-title">Document No.</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Template</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Date</th>
                                    <th class="py-3 px-3 fw-semibold text-title">Status</th>
                                    <th class="py-3 px-3 fw-semibold text-title text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (processedSurveys.Count == 0)
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                            <p class="mb-2 fw-semibold text-body">No processed surveys</p>
                                            <p class="mb-0 small">Confirmed and rejected surveys will appear here</p>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var survey in processedSurveys)
                                    {
                                        <tr>
                                            <td class="px-3 py-3">
                                                <span class="fw-semibold text-primary">@survey.DocumentId</span>
                                            </td>
                                            <td class="px-3 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle p-2 me-2" 
                                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: rgba(79, 70, 229, 0.1);">
                                                        <i class="bi bi-file-earmark-text-fill text-primary"></i>
                                                    </div>
                                                    <span class="text-body">@(survey.Header != null ? survey.Header.TemplateName : "N/A")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3 text-body">
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="bi bi-calendar3 text-primary"></i>
                                                    <span>@survey.CreatedAt.ToString("dd MMM yyyy")</span>
                                                </div>
                                            </td>
                                            <td class="px-3 py-3">
                                                <span class="badge rounded-pill @GetStatusBadgeClass(survey.Status)">
                                                    @GetStatusDisplay(survey.Status)
                                                </span>
                                            </td>
                                            <td class="px-3 py-3 text-center">
                                                <button class="btn btn-sm btn-primary px-3" @onclick="() => ViewSurvey(survey.DocumentId)">
                                                    <i class="bi bi-eye me-1"></i>View
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .transition-icon {
        transition: transform 0.3s ease;
    }

    [aria-expanded="true"] .transition-icon {
        transform: rotate(180deg);
    }

    .table-hover tbody tr {
        transition: all 0.2s ease;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(79, 70, 229, 0.03);
        transform: translateX(2px);
    }

    .card-header[data-bs-toggle="collapse"] {
        transition: background-color 0.2s ease;
    }

    .card-header[data-bs-toggle="collapse"]:hover {
        background-color: rgba(79, 70, 229, 0.02);
    }
</style>