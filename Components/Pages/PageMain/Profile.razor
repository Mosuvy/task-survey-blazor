@page "/profile"
@namespace TaskSurvey.Components.Pages.Profile
@layout MainLayout
@rendermode InteractiveServer

<PageTitle>Profile - TaskSurvey</PageTitle>

<div class="container-fluid px-4 py-4 bg-main" style="min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-primary text-white p-3 rounded-3 shadow-sm">
                        <i class="bi bi-person-circle fs-4"></i>
                    </div>
                    <div>
                        <h3 class="mb-1 fw-bold text-title">My Profile</h3>
                        <p class="text-muted mb-0">View and manage your account information</p>
                    </div>
                </div>
            </div>

            <!-- Profile Card -->
            <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
                <div class="card-header bg-primary text-white py-3 px-4 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 fw-semibold">
                            <i class="bi bi-person-badge me-2"></i>Personal Information
                        </h6>
                        <span class="badge bg-white text-primary">@currentUser?.Role?.RoleName</span>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <!-- Profile Avatar Section -->
                    <div class="text-center mb-4 pb-4 border-bottom border-custom">
                        <div class="bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 120px; height: 120px;">
                            <i class="bi bi-person-fill" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="fw-bold text-title mb-1">@currentUser?.Username</h4>
                        <p class="text-muted mb-0">@currentUser?.PositionName</p>
                    </div>

                    <!-- Info Grid -->
                    <div class="row g-3">
                        <!-- User ID -->
                        <div class="col-md-6">
                            <div class="p-3 bg-main rounded-3 border border-custom">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="bg-primary text-white rounded-2 p-2">
                                        <i class="bi bi-hash fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">User ID</small>
                                        <span class="fw-semibold text-title">@currentUser?.Id</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="col-md-6">
                            <div class="p-3 bg-main rounded-3 border border-custom">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="bg-primary text-white rounded-2 p-2">
                                        <i class="bi bi-person-fill fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Username</small>
                                        <span class="fw-semibold text-title">@currentUser?.Username</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Position Name -->
                        <div class="col-md-6">
                            <div class="p-3 bg-main rounded-3 border border-custom">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="text-white rounded-2 p-2 badge-success-custom">
                                        <i class="bi bi-briefcase-fill fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Position Name</small>
                                        <span class="fw-semibold text-title">@currentUser?.PositionName</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Position Level -->
                        <div class="col-md-6">
                            <div class="p-3 bg-main rounded-3 border border-custom">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="text-white rounded-2 p-2" style="background-color: var(--bs-secondary);">
                                        <i class="bi bi-diagram-3-fill fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Position Level</small>
                                        <span class="fw-semibold text-title">@currentUser?.Position?.PositionLevel</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Role -->
                        <div class="col-md-6">
                            <div class="p-3 bg-main rounded-3 border border-custom">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="text-white rounded-2 p-2" style="background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);">
                                        <i class="bi bi-shield-check fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Role</small>
                                        <span class="fw-semibold text-title">@currentUser?.Role?.RoleName</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Supervisor Card -->
            @if (isUser && supervisor != null)
            {
                <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
                    <div class="card-header py-3 px-4 border-bottom border-custom bg-card" style="background-color: var(--bs-secondary) !important; color: white;">
                        <h6 class="mb-0 fw-semibold text-white">
                            <i class="bi bi-person-lines-fill me-2"></i>Your Supervisor
                        </h6>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center gap-4">
                            <div class="text-white rounded-circle d-flex align-items-center justify-content-center" 
                                 style="width: 80px; height: 80px; background-color: var(--bs-secondary); flex-shrink: 0;">
                                <i class="bi bi-person-badge-fill fs-1"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="fw-bold text-title mb-2">@supervisor.Username</h5>
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-briefcase text-primary"></i>
                                            <small class="text-muted">Position:</small>
                                            <small class="fw-semibold text-body">@supervisor.PositionName</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-hash text-primary"></i>
                                            <small class="text-muted">ID:</small>
                                            <small class="fw-semibold text-body">@supervisor.Id</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Account Actions -->
            <div class="card border-custom shadow-sm rounded-3 bg-card">
                <div class="card-header bg-card py-3 px-4 border-bottom border-custom">
                    <h6 class="mb-0 fw-semibold text-title">
                        <i class="bi bi-gear-fill me-2 text-primary"></i>Account Actions
                    </h6>
                </div>
                
                <div class="card-body p-4">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary border-custom d-flex align-items-center justify-content-between p-3" 
                                @onclick='() => NavigationManager.NavigateTo("/dashboard")'>
                            <span class="fw-semibold">
                                <i class="bi bi-speedometer2 me-2"></i>Back to Dashboard
                            </span>
                            <i class="bi bi-arrow-right"></i>
                        </button>
                        
                        <button class="btn btn-outline-danger border-custom d-flex align-items-center justify-content-between p-3" 
                                @onclick="HandleLogout">
                            <span class="fw-semibold">
                                <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                            </span>
                            <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>