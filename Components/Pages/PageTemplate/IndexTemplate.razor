@page "/templates"
@namespace TaskSurvey.Components.Pages.IndexTemplate
@layout MainLayout
@rendermode InteractiveServer

<PageTitle>Template Management</PageTitle>

<div class="container-fluid px-4 py-4 bg-main" style="min-height: 100vh;">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="fw-bold text-title mb-1">Template Management</h3>
                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Manage and organize survey templates</p>
                </div>
                <button class="btn btn-primary text-white shadow-sm px-4" @onclick='() => NavigationManager.NavigateTo("/templates/form")'>
                    <i class="bi bi-plus-circle me-2"></i>Add Template
                </button>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label fw-semibold text-title mb-1" style="font-size: 0.85rem;">
                        <i class="bi bi-search me-1 text-primary"></i>Search Template
                    </label>
                    <input type="text" class="form-control border-custom" placeholder="Search by name or ID..." 
                           @bind="searchQuery" @bind:event="oninput" @onkeyup="ApplyFilters" 
                           style="font-size: 0.95rem;" />
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white p-2 rounded me-3">
                            <i class="bi bi-file-earmark-text-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Total Templates</p>
                            <h4 class="fw-bold mb-0 text-title">@templates.Count</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-custom shadow-sm rounded-3 h-100 bg-card">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-white p-2 rounded me-3 badge-success-custom">
                            <i class="bi bi-diagram-3-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Active Positions</p>
                            <h4 class="fw-bold mb-0 text-title">@templates.Select(t => t.PositionId).Distinct().Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Templates Table -->
    <div class="card border-custom shadow-sm rounded-3 bg-card">
        <div class="card-header bg-card py-3 px-3 border-bottom border-custom">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-semibold text-title">
                    <i class="bi bi-table me-2 text-primary"></i>Template List
                </h6>
                <span class="badge bg-primary rounded-pill" style="font-size: 0.85rem;">
                    @filteredTemplates.Count Results
                </span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="font-size: 0.9rem;">
                    <thead class="bg-main">
                        <tr>
                            <th class="py-3 px-3 fw-semibold text-title">ID</th>
                            <th class="py-3 px-3 fw-semibold text-title">Template Name</th>
                            <th class="py-3 px-3 fw-semibold text-title">Position Level</th>
                            <th class="py-3 px-3 fw-semibold text-title">Theme</th>
                            <th class="py-3 px-3 fw-semibold text-title text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (filteredTemplates.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    <p class="mb-0">No templates found</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var template in filteredTemplates)
                            {
                                <tr>
                                    <td class="px-3 py-3">
                                        <span class="fw-semibold text-primary">@template.Id</span>
                                    </td>
                                    <td class="px-3 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-main rounded-circle p-2 me-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-file-earmark-text-fill text-primary"></i>
                                            </div>
                                            <span class="fw-semibold text-body">@template.TemplateName</span>
                                        </div>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="badge bg-primary rounded-pill">
                                            @(positions.FirstOrDefault(p => p.Id == template.PositionId)?.PositionLevel ?? "-")
                                        </span>
                                    </td>
                                    <td class="px-3 py-3">
                                        @if (!string.IsNullOrEmpty(template.Theme))
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-palette-fill text-primary me-2"></i>
                                                <span class="text-body small">@template.Theme</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                    <td class="px-3 py-3 text-center">
                                        <button class="btn btn-sm btn-primary text-white px-3" @onclick="() => EditTemplate(template.Id)">
                                            <i class="bi bi-pencil-square me-1"></i>Edit
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>