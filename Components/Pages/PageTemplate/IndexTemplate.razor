@page "/templates"
@using TaskSurvey.Infrastructure.DTOs.TemplateDTOs
@layout MainLayout
@rendermode InteractiveServer
@inject ITemplateService TemplateService
@inject IPositionService PositionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="fw-bold text-dark mb-1">Template Management</h3>
                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Manage and organize survey templates</p>
                </div>
                <button class="btn text-white shadow-sm px-4" @onclick='() => NavigationManager.NavigateTo("/templates/form")'
                        style="background: #0ea5e9; border: none;">
                    <i class="bi bi-plus-circle me-2"></i>Add Template
                </button>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card border-0 shadow-sm rounded-3 mb-3">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label fw-semibold text-dark mb-1" style="font-size: 0.85rem;">
                        <i class="bi bi-search me-1" style="color: #0ea5e9;"></i>Search Template
                    </label>
                    <input type="text" class="form-control" placeholder="Search by name or ID..." 
                           @bind="searchQuery" @bind:event="oninput" @onkeyup="ApplyFilters" 
                           style="font-size: 0.95rem;" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-dark mb-1" style="font-size: 0.85rem;">
                        <i class="bi bi-diagram-3 me-1" style="color: #0ea5e9;"></i>Position Level
                    </label>
                    <select class="form-select" @onchange="OnPositionFilterChanged" style="font-size: 0.95rem;">
                        <option value="0">All Positions</option>
                        @foreach (var p in positions)
                        {
                            <option value="@p.Id">@p.PositionLevel</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-white p-2 rounded me-3" style="background: #0ea5e9;">
                            <i class="bi bi-file-earmark-text-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Total Templates</p>
                            <h4 class="fw-bold mb-0">@templates.Count</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-white p-2 rounded me-3" style="background: #10b981;">
                            <i class="bi bi-diagram-3-fill fs-4"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">Active Positions</p>
                            <h4 class="fw-bold mb-0">@templates.Select(t => t.PositionId).Distinct().Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Templates Table -->
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-white py-3 px-3 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-semibold text-dark">
                    <i class="bi bi-table me-2" style="color: #0ea5e9;"></i>Template List
                </h6>
                <span class="badge rounded-pill" style="background: #0ea5e9; font-size: 0.85rem;">
                    @filteredTemplates.Count Results
                </span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="font-size: 0.9rem;">
                    <thead style="background: #f8f9fa;">
                        <tr>
                            <th class="py-3 px-3 fw-semibold text-dark">ID</th>
                            <th class="py-3 px-3 fw-semibold text-dark">Template Name</th>
                            <th class="py-3 px-3 fw-semibold text-dark">Position Level</th>
                            <th class="py-3 px-3 fw-semibold text-dark">Theme</th>
                            <th class="py-3 px-3 fw-semibold text-dark text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (filteredTemplates.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    <p class="mb-0">No templates found</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var template in filteredTemplates)
                            {
                                <tr>
                                    <td class="px-3 py-3">
                                        <span class="fw-semibold" style="color: #0ea5e9;">@template.Id</span>
                                    </td>
                                    <td class="px-3 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-2 me-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-file-earmark-text-fill" style="color: #0ea5e9;"></i>
                                            </div>
                                            <span class="fw-semibold">@template.TemplateName</span>
                                        </div>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="badge rounded-pill" style="background: #0ea5e9;">
                                            @(positions.FirstOrDefault(p => p.Id == template.PositionId)?.PositionLevel ?? "-")
                                        </span>
                                    </td>
                                    <td class="px-3 py-3">
                                        @if (!string.IsNullOrEmpty(template.Theme))
                                        {
                                            <span class="text-muted small">@template.Theme</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                    <td class="px-3 py-3 text-center">
                                        <button class="btn btn-sm text-white px-3" @onclick="() => EditTemplate(template.Id)"
                                                style="background: #0ea5e9; border: none;">
                                            <i class="bi bi-pencil-square me-1"></i>Edit
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<TemplateHeaderResponseDTO> templates = new();
    private List<TemplateHeaderResponseDTO> filteredTemplates = new();
    private List<PositionResponseDTO> positions = new();
    
    private string searchQuery = "";
    private int selectedPosId = 0;

    protected override async Task OnInitializedAsync()
    {
        positions = await PositionService.GetPositions();
        await LoadData();
    }

    private async Task LoadData()
    {
        templates = await TemplateService.GetTemplateHeaders();
        ApplyFilters();
    }

    private void OnPositionFilterChanged(ChangeEventArgs e)
    {
        selectedPosId = int.Parse(e.Value?.ToString() ?? "0");
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        var result = templates.AsQueryable();

        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var q = searchQuery.ToLower();
            result = result.Where(t => t.TemplateName.ToLower().Contains(q) || t.Id.Contains(q));
        }

        if (selectedPosId != 0) result = result.Where(t => t.PositionId == selectedPosId);

        filteredTemplates = result.ToList();
    }

    private void EditTemplate(string id) => NavigationManager.NavigateTo($"/templates/form?templateId={id}");
}