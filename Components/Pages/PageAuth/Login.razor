@page "/login"
@namespace TaskSurvey.Components.Pages.Login
@layout AuthLayout
@rendermode InteractiveServer

<PageTitle>Login - TaskSurvey</PageTitle>

<div class="container bg-main" style="min-height: 100vh;">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 col-lg-4">
            <div class="card border-custom shadow-lg rounded-3 bg-card">
                <!-- Header -->
                <div class="card-header bg-primary text-white text-center py-4 border-0">
                    <div class="mb-3">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-3 p-3" 
                             style="background: rgba(255, 255, 255, 0.2);">
                            <i class="bi bi-clipboard-check fs-1"></i>
                        </div>
                    </div>
                    <h4 class="mb-1 fw-bold">Welcome Back</h4>
                    <p class="mb-0 opacity-75">Login to TaskSurvey</p>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <form @onsubmit="HandleLogin">
                        <!-- Username -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-title mb-2">
                                <i class="bi bi-person me-1 text-primary"></i>Username
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-main border-custom">
                                    <i class="bi bi-person-fill text-primary"></i>
                                </span>
                                <input type="text" 
                                       class="form-control border-custom" 
                                       @bind="loginViewModel.Username"
                                       placeholder="Enter your username"
                                       autocomplete="username"
                                       required />
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-title mb-2">
                                <i class="bi bi-lock me-1 text-primary"></i>Password
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-main border-custom">
                                    <i class="bi bi-lock-fill text-primary"></i>
                                </span>
                                <input type="@(showPassword ? "text" : "password")" 
                                       class="form-control border-custom" 
                                       @bind="loginViewModel.Password"
                                       placeholder="Enter your password"
                                       autocomplete="current-password"
                                       required />
                                <button class="btn btn-outline-secondary border-custom" 
                                        type="button" 
                                        @onclick="TogglePasswordVisibility"
                                        title="@(showPassword ? "Hide password" : "Show password")">
                                    <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye") text-muted"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" 
                                class="btn btn-primary text-white w-100 py-3 fw-semibold shadow-sm" 
                                disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Logging in...</span>
                            }
                            else
                            {
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                <span>Login</span>
                            }
                        </button>
                    </form>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-main text-center py-3 border-top border-custom">
                    <small class="text-muted">
                        <i class="bi bi-shield-check me-1"></i>
                        Secure Login
                    </small>
                </div>
            </div>

            <!-- Copyright -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    Â© @DateTime.Now.Year TaskSurvey. All rights reserved.
                </small>
            </div>
        </div>
    </div>
</div>