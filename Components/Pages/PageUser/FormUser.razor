@page "/users/form"
@layout MainLayout
@rendermode InteractiveServer
@inject IUserService UserService
@inject IPositionService PositionService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject TaskSurvey.Infrastructure.Data.AppDbContext DbContext
@inject AuthState AuthState
@inject IJSRuntime JS

<PageTitle>Form User</PageTitle>

<div class="container-fluid px-4 py-4 bg-main" style="min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <!-- Header -->
            <div class="mb-4">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <div class="bg-primary text-white p-3 rounded-3 shadow-sm">
                        <i class="bi bi-person-fill-gear fs-4"></i>
                    </div>
                    <div>
                        <h3 class="mb-1 fw-bold text-title">@(isEditMode ? "Edit User" : "Create New User")</h3>
                        <p class="text-muted mb-0" style="font-size: 0.9rem;">
                            @(isEditMode ? $"Modify user data for ID: {currentUserId}" : "Add a new user to the system")
                        </p>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(alertMessage))
            {
                <div class="alert alert-danger border-0 shadow-sm mb-3 alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error!</strong> @alertMessage
                    <button type="button" class="btn-close" @onclick="() => alertMessage = null"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success border-0 shadow-sm mb-3 alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <strong>Success!</strong> @successMessage
                    <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                </div>
            }

            <!-- Main Form Card -->
            <div class="card border-custom shadow-sm rounded-3 mb-3 bg-card">
                <div class="card-header bg-primary text-white py-3 px-4 border-0">
                    <h6 class="mb-0 fw-semibold">
                        <i class="bi bi-person-badge me-2"></i>User Information
                    </h6>
                </div>
                
                <div class="card-body p-4">
                    <div class="row g-3">
                        <!-- User ID -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-title mb-2">
                                <i class="bi bi-hash me-1 text-primary"></i>User ID
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-main border-custom">
                                    <i class="bi bi-fingerprint text-primary"></i>
                                </span>
                                <input type="text" class="form-control bg-main border-custom fw-semibold text-body" 
                                       value="@displayId" readonly />
                                <button class="btn btn-primary px-4" type="button" 
                                        @onclick="OpenUserLookupModal">
                                    <i class="bi bi-search me-1"></i>Lookup
                                </button>
                            </div>
                            <small class="text-muted">Auto-generated or select existing user to edit</small>
                        </div>

                        <!-- Username -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-title mb-2">
                                <i class="bi bi-person me-1 text-primary"></i>Username
                                <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control border-custom @GetValidationClass(reqDto.Username)" 
                                   @bind="reqDto.Username" placeholder="Enter full name/username" />
                            @if (hasAttemptedSubmit && string.IsNullOrWhiteSpace(reqDto.Username))
                            {
                                <div class="invalid-feedback d-block">
                                    <i class="bi bi-exclamation-circle me-1"></i>Username is required
                                </div>
                            }
                        </div>

                        <!-- Position Level -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-title mb-2">
                                <i class="bi bi-diagram-3 me-1 text-primary"></i>Position Level
                                <span class="text-danger">*</span>
                            </label>
                            <select class="form-select border-custom @(reqDto.PositionId == 0 && hasAttemptedSubmit ? "is-invalid" : "")" 
                                    @bind="reqDto.PositionId">
                                <option value="0">-- Select Position Level --</option>
                                @foreach (var p in positions)
                                {
                                    <option value="@p.Id">@p.PositionLevel</option>
                                }
                            </select>
                            @if (hasAttemptedSubmit && reqDto.PositionId == 0)
                            {
                                <div class="invalid-feedback d-block">
                                    <i class="bi bi-exclamation-circle me-1"></i>Position level is required
                                </div>
                            }
                        </div>

                        <!-- Position Name -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-title mb-2">
                                <i class="bi bi-briefcase me-1 text-primary"></i>Position Name
                                <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control border-custom @GetValidationClass(reqDto.PositionName)" 
                                   @bind="reqDto.PositionName" placeholder="Senior Developer" />
                            @if (hasAttemptedSubmit && string.IsNullOrWhiteSpace(reqDto.PositionName))
                            {
                                <div class="invalid-feedback d-block">
                                    <i class="bi bi-exclamation-circle me-1"></i>Position name is required
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Supervisor Card -->
            <div class="card border-custom shadow-sm rounded-3 mb-4 bg-card">
                <div class="card-header text-white py-3 px-4 border-0" style="background-color: var(--bs-secondary);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 fw-semibold">
                            <i class="bi bi-person-lines-fill me-2"></i>Supervisor Details
                        </h6>
                        <span class="badge bg-light text-dark">Required for Officer positions</span>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold text-title mb-2">
                                Officer ID <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="text" class="form-control bg-main border-custom @(hasAttemptedSubmit && string.IsNullOrWhiteSpace(reqDto.SupervisorId) ? "is-invalid" : "")" 
                                       @bind="reqDto.SupervisorId" readonly />
                                <button class="btn text-white px-4" type="button" 
                                        @onclick="OpenSupervisorLookupModal"
                                        style="background-color: var(--bs-secondary);">
                                    <i class="bi bi-search me-1"></i>Select
                                </button>
                            </div>
                            @if (hasAttemptedSubmit && string.IsNullOrWhiteSpace(reqDto.SupervisorId))
                            {
                                <div class="invalid-feedback d-block">
                                    <i class="bi bi-exclamation-circle me-1"></i>Supervisor is required
                                </div>
                            }
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold text-title mb-2">Name</label>
                            <input type="text" class="form-control bg-main border-custom text-body" 
                                   @bind="selectedSupName" readonly />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold text-title mb-2">Position</label>
                            <input type="text" class="form-control bg-main border-custom text-body" 
                                   @bind="selectedSupPos" readonly />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 flex-wrap">
                <button class="btn btn-success-custom px-4 py-2 shadow-sm" @onclick="ShowSubmitConfirmation">
                    <i class="bi bi-check-circle me-2"></i>@(isEditMode ? "Update" : "Submit")
                </button>
                <button class="btn btn-primary px-4 py-2 shadow-sm" @onclick="ResetForm">
                    <i class="bi bi-file-earmark-plus me-2"></i>New
                </button>
                @if (isEditMode)
                {
                    <button class="btn btn-danger-custom px-4 py-2 shadow-sm" @onclick="ShowDeleteConfirmation">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                }
                <button class="btn btn-outline-secondary px-4 py-2 ms-auto border-custom" 
                        @onclick='() => NavigationManager.NavigateTo("/users")'>
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
            </div>
        </div>
    </div>
</div>

<!-- User Lookup Modal -->
<div class="modal fade @(showUserLookup ? "show" : "")" tabindex="-1" 
     style="display: @(showUserLookup ? "block" : "none");">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg bg-card">
            <div class="modal-header bg-primary text-white border-0">
                <h5 class="modal-title fw-semibold">
                    <i class="bi bi-search me-2"></i>Select User to Edit
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="CloseModals"></button>
            </div>
            <div class="modal-body p-4">
                <div class="input-group mb-3">
                    <span class="input-group-text bg-main border-custom">
                        <i class="bi bi-funnel text-primary"></i>
                    </span>
                    <input type="text" class="form-control border-custom" 
                           placeholder="Search by name or ID..." 
                           @bind="searchQuery" @bind:event="oninput" />
                </div>
                <div class="table-responsive" style="max-height: 400px;">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-main sticky-top">
                            <tr>
                                <th class="fw-semibold text-title">ID</th>
                                <th class="fw-semibold text-title">Username</th>
                                <th class="fw-semibold text-title">Position</th>
                                <th class="fw-semibold text-title text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var filtered = allUsersList.Where(x => 
                                    x.Username.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) || 
                                    x.Id.Contains(searchQuery));
                            }
                            @if (!filtered.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        <p class="mb-0">No users found</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in filtered)
                                {
                                    <tr>
                                        <td class="fw-semibold text-primary">@item.Id</td>
                                        <td class="text-body">@item.Username</td>
                                        <td>
                                            <span class="badge bg-primary rounded-pill">@item.PositionName</span>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-primary px-3" 
                                                    @onclick="() => SelectUserToEdit(item.Id)">
                                                <i class="bi bi-pencil-square me-1"></i>Edit
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Supervisor Lookup Modal -->
